<xface:application
	xmlns:xface="http://www.xesoft.com/xmlns/xface"
	xmlns:xprocess="http://www.xesoft.com/xmlns/xprocess"
	xmlns:xwork-editor="http://www.xesoft.com/xmlns/xwork-editor"
	id="xwork-editor"
	bundle="xwork-editor/xwork-editor">

	<xface:application-support id="application-support"/>

	<xface:include src="license/license.xfm.xml"/>

	<!--
		The main window
	-->
	<xface:window id="editor" label="xwork-editor" image="images/opensymphony.gif">

		<xface:include src="xwork-panel.xfm.xml"/>

		<xface:map id="variables"/>

		<xwork-editor:on-editor-show-adapter />

		<xface:include src="savechanges.xfm.xml"/>
		
	</xface:window>

	<!--
		The dialog to choose which file to open
   -->
	<xface:dialog id="choose_document" type="open_file">
		<xface:show-adapter element="../../license/ok" event="ACTION"/>
		<xwork-editor:on-choose-document-ok-adapter />
		<xface:exit-adapter element=".." event="CANCEL" />
	</xface:dialog>

	<xwork-editor:on-startup-adapter />

</xface:application>

