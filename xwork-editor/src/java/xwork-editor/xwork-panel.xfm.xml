<xface:panel
	xmlns:xface="http://www.xesoft.com/xmlns/xface"
	xmlns:xprocess="http://www.xesoft.com/xmlns/xprocess"
	id="editor">

	<!--
		Panel Data Model
   -->
	<xface:xml-datamodel id="model">
		<xface:adapter element="../../split/left/table/model" elementProperty="data"/>
		<xface:adapter element="../../includes/table/model" elementProperty="data"/>		
	</xface:xml-datamodel>

	<!--
		Controls
   -->
	<xface:split-panel id="split" weight="40">
		<xface:panel id="left">

			<xface:relative-layout constraints="xwork-panel-left.layout.xml"/>

			<xface:toolbar id="toolbar">
				<xface:toolbar-button id="create_package" image="xwork-editor/images/add_package.gif"/>
				<xface:toolbar-button id="delete_package" image="xwork-editor/images/delete.gif">
					<xface:selected-list-enabled-adapter element="../../../table" selection="both"/>
				</xface:toolbar-button>
				<xface:seperator />
				<xface:toolbar-button id="edit_includes" image="xwork-editor/images/include.gif"/>
			</xface:toolbar>

			<xface:groupbox id="filter" label="filter">
				<xface:input-panel-layout/>

				<xface:label id="label_name" label="package_name"/>
				<xface:text-input id="name"/>
				<xface:label id="label_extends" label="extends"/>
				<xface:text-input id="extends"/>
			</xface:groupbox>

			<xface:table id="table">
				<xface:filtered-tablemodel id="model">
					<xface:xml-tablemodel id="model" xpath="//package"/>

					<xface:table-model-filter-adapter element="../../../filter/name" elementProperty="value" modelProperty="@name"/>
					<xface:table-model-filter-adapter element="../../../filter/extends" elementProperty="value" modelProperty="@extends"/>

				</xface:filtered-tablemodel>
				<xface:column id="package_name" property="@name"/>
				<xface:column id="extends" property="@extends"/>
			</xface:table>

		</xface:panel>
		<xface:panel id="right">

			<xface:selected-list-enabled-adapter element="../../left/table" selection="both"/>

			<xface:relative-layout constraints="xwork-panel-right.layout.xml"/>

			<xface:panel id="header">

				<xface:input-panel-layout />

				<xface:label id="label_name" label="name"/>
				<xface:text-input id="name" editable="false" />
				<xface:label id="label_extends" label="extends"/>
				<xface:text-input id="extends" editable="false" />

			</xface:panel>

			<xface:tab-panel id="tabpanel" orientation="top">

				<xface:include src="action/actiontab.xfm.xml" />
				<xface:include src="interceptor/interceptortab.xfm.xml" />
				<xface:include src="stack/stacktab.xfm.xml" />
				<xface:include src="resulttypes/resulttypestab.xfm.xml" />

			</xface:tab-panel>

			<xface:xml-datamodel id="model">
				<xface:adapter modelProperty="@name" element="../../header/name" elementProperty="value"/>
				<xface:adapter modelProperty="@extends" element="../../header/extends" elementProperty="value"/>

				<xface:adapter element="../../tabpanel/interceptors/split/left/table/model" elementProperty="data" modelProperty="interceptors" modelPropertyType="object" />
				<xface:adapter element="../../tabpanel/interceptor_stacks/split/left/table/model" elementProperty="data" modelProperty="interceptors" modelPropertyType="object" />
				<xface:adapter element="../../tabpanel/actions/split/left/table/model" elementProperty="data" />
				<xface:adapter element="../../tabpanel/result_types/table/model" elementProperty="data" modelProperty="result-types" modelPropertyType="object" />

				<xface:selected-table-item-adapter element="../../../left/table"/>
			</xface:xml-datamodel>

		</xface:panel>
	</xface:split-panel>

	<!--
		Panel Includes
   -->
	<xface:include src="package/createpackage.xfm.xml" />
	<xface:include src="package/deletepackage.xfm.xml" />
	<xface:include src="includes/includes.xfm.xml" />

</xface:panel>